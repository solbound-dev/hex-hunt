{
  "version": 2,
  "builds": [
    { "src": "apps/web/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "apps/api/src/main.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/api/src/main.ts" },
    { "src": "/(.*)", "dest": "apps/web/dist/$1" }
  ]
}
