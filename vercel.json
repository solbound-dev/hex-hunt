{
  "version": 2,
  "builds": [
    { "src": "apps/web/vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "apps/web/dist" } },
    { "src": "apps/api/src/main.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/socket.io/(.*)", "dest": "apps/api/src/main.ts" },
    { "src": "/api/(.*)", "dest": "apps/api/src/main.ts" },
    { "src": "/(.*\\..*)", "dest": "apps/web/dist/$1" },
    { "src": "/(.*)", "dest": "apps/web/dist/index.html" }
  ]
}
